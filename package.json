{
  "name": "devtools-blocker",
  "version": "1.0.2",
  "description": "A TypeScript-based React hook library",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "sideEffects": false,
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
    "prepare": "husky install",
    "prepublishOnly": "npm run build",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui"
  },
  "keywords": [
    "react",
    "hook",
    "typescript",
    "devtools",
    "devtools-blocker",
    "security",
    "browser",
    "context-menu",
    "keyboard-shortcuts"
  ],
  "author": "",
  "license": "MIT",
  "peerDependencies": {
    "react": "^16.8.0 || ^17.0.0 || ^18.0.0"
  },
  "devDependencies": {
    "@testing-library/react": "^16.3.1",
    "@types/react": "^18.2.0",
    "@vitest/ui": "^4.0.16",
    "jsdom": "^27.3.0",
    "husky": "^9.1.6",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tsup": "^8.0.0",
    "typescript": "^5.3.0",
    "vitest": "^4.0.16"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Abhijit47/devtools-blocker.git"
  },
  "bugs": {
    "url": "https://github.com/Abhijit47/devtools-blocker/issues"
  },
  "homepage": "https://github.com/Abhijit47/devtools-blocker#readme"
}
